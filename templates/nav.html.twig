<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{% block stylesheets %}{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}

		<style>

			* {
				background-color: #666666 !important;
				color: white;
			}
			h1 {
				position: relative;
				padding-left: 5vmin;
				margin-left: 8vmin;
				font-size: 3.5vmin;
			}
			nav {
				margin-top: 3vmin;
				margin-bottom: 4vmin;
			}
			a {
				margin: 2vmin;
				padding: 2vmin;
				font-size: 3vmin;
				text-decoration: none;
				border: 1px #888888 solid;
				border-radius: 20px;
				background-color: #888888 !important;
				color: white;
				transition: text-decoration 1s, border 0.1s;
			}
			a:hover {
				border: 3px white solid;
				text-decoration: underline;
			}
		</style>

	</head>
	<body>
		{% block body %}
			<nav>
				<a href="{{ path('app_gelepi_listing') }}" class="btn btn-primary">Liste Complete</a>
				<a href="{{ path('app_gelepi_variable') }}" class="btn btn-primary">Ajouter Variable</a>
				<a href="{{ path('app_gelepi_element') }}" class="btn btn-primary">Ajouter Materiel</a>
			</nav>

		{% endblock %}
	</body>
</html>
